
name: Split & DNS Check

on:
  schedule:
    - cron: "0 0 * * *"
    - cron: "0 6 * * *"
    - cron: "0 12 * * *"
    - cron: "0 18 * * *"
    - cron: "*/22 * * * *"
  workflow_dispatch:
    inputs:
      part:
        description: 'æ‰‹åŠ¨éªŒè¯æŒ‡å®šåˆ†ç‰‡ 1~16'
        required: false
        default: ''

permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest
    env:
      PYTHONUNBUFFERED: 1

    steps:
      # âœ… æ‹‰å–ä»“åº“
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      # âœ… Python ç¯å¢ƒ
      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.12'

      # âœ… å®‰è£…ä¾èµ–
      - name: Install dependencies
        run: pip install --upgrade requests dnspython

      # âœ… Git ä¿¡æ¯
      - name: Configure Git
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"

      # âœ… è‡ªåŠ¨/æ‰‹åŠ¨åˆ†ç‰‡åˆ‡æ¢
      - name: Determine PART index
        id: detect
        run: |
          mkdir -p tmp
          LAST_PART_FILE="tmp/last_part.txt"
          PART_INPUT="${{ github.event.inputs.part }}"

          if [ -n "$PART_INPUT" ]; then
            PART="$PART_INPUT"
            echo "ğŸ›  æ‰‹åŠ¨æŒ‡å®šåˆ†ç‰‡ï¼š$PART"
          else
            if [ -f "$LAST_PART_FILE" ]; then
              LAST_PART=$(cat "$LAST_PART_FILE")
              PART=$(( (LAST_PART % 16) + 1 ))
            else
              PART=1
            fi
            echo "â± è‡ªåŠ¨è½®æ›¿åˆ†ç‰‡ï¼š$PART"
          fi

          echo "$PART" > "$LAST_PART_FILE"
          echo "part=$PART" >> $GITHUB_OUTPUT

      # âœ… æ¯ 6 å°æ—¶å¼ºåˆ¶æ›´æ–°è§„åˆ™æº
      - name: Force download rules at schedule times
        run: |
          CURRENT_HOUR=$(date -u +"%H")
          if [[ "$CURRENT_HOUR" == "00" || "$CURRENT_HOUR" == "06" || "$CURRENT_HOUR" == "12" || "$CURRENT_HOUR" == "18" ]]; then
            echo "âœ… å¼ºåˆ¶æ‹‰å–è§„åˆ™æºå¹¶ç”Ÿæˆæ‰€æœ‰åˆ†ç‰‡"
            python3 split_and_check_16.py --force
          else
            echo "â© éå®šæ—¶åˆ·æ–°æ—¶æ®µï¼Œè·³è¿‡å¼ºåˆ¶æ›´æ–°"
          fi

      # âœ… å¦‚æœé¦–æ¬¡è¿è¡Œåˆ™å¿…é¡»ç”Ÿæˆ
      - name: Ensure rules and first part exist
        run: |
          if [ ! -f "merged_rules.txt" ] || [ ! -f "tmp/part_01.txt" ]; then
            echo "âš  ç¼ºå°‘è§„åˆ™æ–‡ä»¶ â†’ é‡æ–°æ‹‰å–"
            python3 split_and_check_16.py --force
          else
            echo "âœ… è§„åˆ™æ–‡ä»¶ä¸åˆ†ç‰‡å­˜åœ¨"
          fi

      # âœ… å¿…é¡»æœ‰å…¨å±€è¿ç»­å¤±è´¥è®¡æ•°ä»“åº“
      - name: Ensure delete_counter.json exists
        run: |
          mkdir -p dist
          if [ ! -f dist/delete_counter.json ]; then
            echo "{}" > dist/delete_counter.json
            echo "âœ… åˆ›å»º dist/delete_counter.jsonï¼ˆå…¨å±€è¿ç»­å¤±è´¥è®¡æ•°ï¼‰"
          else
            echo "âœ… delete_counter.json å·²å­˜åœ¨"
          fi

      # âœ… æ‰§è¡Œ DNS éªŒè¯
      - name: Run DNS validation for current part
        env:
          PART: ${{ steps.detect.outputs.part }}
        run: |
          mkdir -p logs
          echo "â± å¼€å§‹éªŒè¯åˆ†ç‰‡ $PART"
          python3 split_and_check_16.py --part "$PART" | tee logs/split_check_part_${PART}.log

      # âœ… Commit & Push
      - name: Commit & Push Validated Rules
        env:
          PART: ${{ steps.detect.outputs.part }}
        run: |
          STATS=$(grep "COMMIT_STATS" logs/split_check_part_${PART}.log | tail -n1 | sed 's/COMMIT_STATS: //')
          git add tmp/last_part.txt dist/validated_part_*.txt dist/delete_counter.json merged_rules.txt
          git commit -m "âœ… åˆ†ç‰‡ $PART | è¿ç»­å¤±è´¥è®°å½•å·²æ›´æ–° | $STATS" || echo "â„¹ï¸ æ— éœ€æäº¤"
          git pull --rebase origin main || echo "âš  Pull å¤±è´¥ï¼ˆå·²å¿½ç•¥ï¼‰"
          git push https://x-access-token:${{ secrets.GITHUB_TOKEN }}@github.com/${{ github.repository }}.git HEAD:main || echo "âš  Push å¤±è´¥"
